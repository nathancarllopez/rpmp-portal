{
  "name": "rpmp-portal",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "npm run dev --workspace backend",
    "dev": "concurrently \"npm run dev --workspace frontend\" \"npm run dev --workspace backend\"",
    "build": "echo \"Building both frontend and backend...\"",
    "test": "echo \"No tests yet\"",
    "predeploy": "cd frontend && npm install && npm run build",
    "deploy": "gh-pages -d frontend/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "gh-pages": "^6.3.0"
  }
}